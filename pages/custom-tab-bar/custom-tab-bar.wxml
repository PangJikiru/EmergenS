<!--custom-tab-barf/custom-tab-bar.wxml-->
<view class="custom-tab-bar">
  <view class="highlight-background" style="transform: translateX({{translate}});"></view>
  <block wx:for="{{list}}" wx:key="index">
    <view class="tab-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <image src="{{selected == index ? item.selectedIconPath : item.iconPath}}"></image>
      <text class="tab-text">{{item.text}}</text>
    </view>
  </block>
</view>